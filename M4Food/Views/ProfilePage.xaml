<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="M4Food.Views.ProfilePage"
             Title="My Profile"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FDF8E5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <Grid ColumnDefinitions="Auto, *" Padding="0,10,0,10">
                <Button Grid.Column="0"
                        Text="&lt;" 
                        Clicked="OnBackClicked"
                        FontSize="35"
                        FontAttributes="Bold"
                        TextColor="#333333"
                        BackgroundColor="Transparent"
                        Padding="0"
                        HeightRequest="50"
                        WidthRequest="50"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>

                <Label Grid.Column="1" 
                       Text="Edit Profile" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="#333333"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       Margin="-50,0,0,0"/>
            </Grid>

            <VerticalStackLayout Spacing="15">

                <Border Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,8" BackgroundColor="White">
                    <VerticalStackLayout Spacing="0">
                        <Label Text="Full Name" FontSize="13" TextColor="#666666"/>
                        <Entry Placeholder="Enter your name" 
                               TextColor="#1A1A1A" 
                               FontSize="17" 
                               BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,8" BackgroundColor="White">
                    <VerticalStackLayout Spacing="0">
                        <Label Text="Email" FontSize="13" TextColor="#666666"/>
                        <Entry Placeholder="youremail@gmail.com" 
                               Keyboard="Email" 
                               TextColor="#1A1A1A" 
                               FontSize="17" 
                               BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,8" BackgroundColor="White">
                    <Grid ColumnDefinitions="Auto, Auto, *">

                        <Picker x:Name="FlagPicker" 
                                Grid.Column="0"
                                Title=""
                                FontSize="16"
                                TextColor="#1A1A1A"
                                SelectedIndexChanged="OnFlagChanged"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                BackgroundColor="Transparent">
                        </Picker>

                        <Label x:Name="PhoneCodeLabel" 
                               Grid.Column="1"
                               Text="+60" 
                               FontSize="17" 
                               TextColor="#1A1A1A" 
                               VerticalOptions="Center"
                               FontAttributes="Bold"
                               Margin="10,0,10,0"/>

                        <VerticalStackLayout Grid.Column="2" Spacing="0">
                            <Label Text="Phone number" FontSize="13" TextColor="#666666"/>
                            <Entry Placeholder="12-345 6789" 
                                   Keyboard="Telephone" 
                                   TextColor="#1A1A1A" 
                                   FontSize="17" 
                                   BackgroundColor="Transparent"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Grid ColumnDefinitions="*, *" ColumnSpacing="15">

                    <Border Grid.Column="0" Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,8" BackgroundColor="White">
                        <VerticalStackLayout Spacing="0">
                            <Label Text="Country" FontSize="13" TextColor="#666666"/>
                            <Entry x:Name="CountryEntry" 
                                   Text="Malaysia" 
                                   IsReadOnly="True"
                                   TextColor="#1A1A1A" 
                                   FontSize="17" 
                                   BackgroundColor="Transparent"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="1" Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,8" BackgroundColor="White">
                        <VerticalStackLayout Spacing="0">
                            <Label Text="Gender" FontSize="13" TextColor="#666666"/>
                            <Picker Title="Select" TextColor="#1A1A1A" FontSize="17" BackgroundColor="Transparent">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Male</x:String>
                                        <x:String>Female</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <Border Stroke="Transparent" StrokeShape="RoundRectangle 15" Padding="15,10" BackgroundColor="White">
                    <VerticalStackLayout Spacing="0">
                        <Label Text="Address" FontSize="13" TextColor="#666666"/>
                        <Editor Placeholder="1, Jalan Universiti, 96000 Sibu" 
                                TextColor="#1A1A1A" 
                                FontSize="17" 
                                AutoSize="TextChanges" 
                                BackgroundColor="Transparent"/>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>

            <VerticalStackLayout Spacing="15" Margin="0,20,0,20">
                <Button Text="SUBMIT" 
                        BackgroundColor="#EBC656" 
                        TextColor="White" 
                        FontAttributes="Bold" 
                        FontSize="18"
                        CornerRadius="30" 
                        HeightRequest="55"
                        Shadow="{Shadow Brush=Black, Offset='0,5', Opacity=0.1}"/>

                <Button Text="Log Out" 
                        Clicked="OnLogoutClicked" 
                        BackgroundColor="Transparent" 
                        TextColor="#FF4B4B" 
                        FontAttributes="Bold" 
                        FontSize="16"
                        HeightRequest="50"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>