<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:M4Food.Views"
             x:Class="M4Food.Views.CartPage"
             Title="My Cart"
             
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#FDF8E5">

    <ContentPage.BindingContext>
        <views:CartService />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *" Padding="20" RowSpacing="0">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="0,10,0,10">
            <Button Grid.Column="0"
                    Text="&lt;"
                    Clicked="OnBackClicked"
                    FontSize="35"
                    FontAttributes="Bold"
                    TextColor="#333333"
                    BackgroundColor="Transparent"
                    Padding="0"
                    HeightRequest="50"
                    WidthRequest="50"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"/>

            <Label Grid.Column="1" 
                   Text="My Shopping Cart" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#333333"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="-50,0,0,0"/>
        </Grid>

        <Grid Grid.Row="1" 
              RowDefinitions="*, Auto" 
              Padding="0, 10, 0, 0">

            <CollectionView Grid.Row="0" 
                            ItemsSource="{Binding Items}"
                            EmptyView="Your cart is empty. Please add some items from the Home page."
                            Margin="0,0,0,10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="views:CartItem">
                        <Frame Margin="0,5" Padding="15" CornerRadius="10" BackgroundColor="White" HasShadow="False">
                            <Grid ColumnDefinitions="*, Auto, Auto" VerticalOptions="Center">
                                <StackLayout Grid.Column="0" Spacing="2">
                                    <Label Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#1A1A1A"/>
                                    <Label Text="{Binding Price, StringFormat='RM {0:F2}'}" 
                                           FontSize="14" 
                                           TextColor="#666666"/>
                                </StackLayout>

                                <Label Grid.Column="1" 
                                       Text="{Binding Quantity, StringFormat='x {0}'}" 
                                       FontSize="16" 
                                       TextColor="#2C3E50"
                                       VerticalOptions="Center"
                                       Margin="0,0,20,0"/>

                                <Label Grid.Column="2" 
                                       Text="{Binding TotalPrice, StringFormat='RM {0:F2}'}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="#E8C547"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <VerticalStackLayout Grid.Row="1" Spacing="15" Margin="0,10,0,0">

                <Grid ColumnDefinitions="*, Auto">
                    <Label Grid.Column="0" Text="Total:" FontSize="20" FontAttributes="Bold" TextColor="#1A1A1A"/>
                    <Label x:Name="TotalLabel" 
                           Grid.Column="1" 
                           Text="RM 0.00" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#FF6B35"/>
                </Grid>

                <Button Text="Checkout"
                        BackgroundColor="#E8C547"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="18"
                        CornerRadius="30"
                        HeightRequest="55"
                        Clicked="OnCheckoutClicked"/>
            </VerticalStackLayout>

        </Grid>
    </Grid>
</ContentPage>